@import '../variables.styl'

.sign-up-widget
  width               300px
  background          #F2F5F8
  border-radius       6px
  position            relative

  img
    border-radius     6px 6px 0 0
    width             460px
    height            144px

  a
    text-decoration   none
    font-size         14px
    &.forgot-password
      color           GREY
      text-align      center
      display         block
      margin          12px 0 29px 0
    &.already-registered
      color           BLUE
      position        absolute
      top             17px
      right           17px

  input
    margin            0 30px
    width             240px
    &.password
      margin-top      24px

  .title
    color             BLACK
    font-size         16px
    text-transform    uppercase
    margin            17px 0 23px 22px
    font-weight       FONT_SEMIBOLD
    float             left

  button
    width             240px
    margin            0 30px 30px 30px

  &.with-image
    width             460px
    .title
      font-size       32px
      color           #FFF
      text-align      center
      position        absolute
      text-transform  uppercase
      width           100%
      line-height     144px
      top             0
      margin          0

    .forgot-password
      margin          12px 0 19px 0

    input
      width           400px
      &.text
        margin-top    30px

    .already-registered
      color           #FFF

    button
      width           400px
      margin          0 30px 30px 30px
