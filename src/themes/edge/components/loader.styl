// SPINNER LOADER
.loader .spinner {
  position: relative;
}

.loader .spinner .item {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
}

.loader .spinner .item:before {
  content: '';
  display: block;
  margin: 0 auto;
  width: 15%;
  height: 15%;
  background-color: #333;
  border-radius: 100%;
  -webkit-animation: spinnerFadeDelay 1.2s infinite ease-in-out both;
          animation: spinnerFadeDelay 1.2s infinite ease-in-out both;
}
.loader .spinner .item2 {
  -webkit-transform: rotate(30deg);
      -ms-transform: rotate(30deg);
          transform: rotate(30deg);
}
.loader .spinner .item3 {
  -webkit-transform: rotate(60deg);
      -ms-transform: rotate(60deg);
          transform: rotate(60deg);
}
.loader .spinner .item4 {
  -webkit-transform: rotate(90deg);
      -ms-transform: rotate(90deg);
          transform: rotate(90deg);
}
.loader .spinner .item5 {
  -webkit-transform: rotate(120deg);
      -ms-transform: rotate(120deg);
          transform: rotate(120deg);
}
.loader .spinner .item6 {
  -webkit-transform: rotate(150deg);
      -ms-transform: rotate(150deg);
          transform: rotate(150deg);
}
.loader .spinner .item7 {
  -webkit-transform: rotate(180deg);
      -ms-transform: rotate(180deg);
          transform: rotate(180deg);
}
.loader .spinner .item8 {
  -webkit-transform: rotate(210deg);
      -ms-transform: rotate(210deg);
          transform: rotate(210deg);
}
.loader .spinner .item9 {
  -webkit-transform: rotate(240deg);
      -ms-transform: rotate(240deg);
          transform: rotate(240deg);
}
.loader .spinner .item10 {
  -webkit-transform: rotate(270deg);
      -ms-transform: rotate(270deg);
          transform: rotate(270deg);
}
.loader .spinner .item11 {
  -webkit-transform: rotate(300deg);
      -ms-transform: rotate(300deg);
          transform: rotate(300deg);
}
.loader .spinner .item12 {
  -webkit-transform: rotate(330deg);
      -ms-transform: rotate(330deg);
          transform: rotate(330deg);
}
.loader .spinner .item2:before {
  -webkit-animation-delay: -1.1s;
          animation-delay: -1.1s;
}
.loader .spinner .item3:before {
  -webkit-animation-delay: -1s;
          animation-delay: -1s;
}
.loader .spinner .item4:before {
  -webkit-animation-delay: -0.9s;
          animation-delay: -0.9s;
}
.loader .spinner .item5:before {
  -webkit-animation-delay: -0.8s;
          animation-delay: -0.8s;
}
.loader .spinner .item6:before {
  -webkit-animation-delay: -0.7s;
          animation-delay: -0.7s;
}
.loader .spinner .item7:before {
  -webkit-animation-delay: -0.6s;
          animation-delay: -0.6s;
}
.loader .spinner .item8:before {
  -webkit-animation-delay: -0.5s;
          animation-delay: -0.5s;
}
.loader .spinner .item9:before {
  -webkit-animation-delay: -0.4s;
          animation-delay: -0.4s;
}
.loader .spinner .item10:before {
  -webkit-animation-delay: -0.3s;
          animation-delay: -0.3s;
}
.loader .spinner .item11:before {
  -webkit-animation-delay: -0.2s;
          animation-delay: -0.2s;
}
.loader .spinner .item12:before {
  -webkit-animation-delay: -0.1s;
          animation-delay: -0.1s;
}

@-webkit-keyframes spinnerFadeDelay {
  0%, 39%, 100% { opacity: 0; }
  40% { opacity: 1; }
}

@keyframes spinnerFadeDelay {
  0%, 39%, 100% { opacity: 0; }
  40% { opacity: 1; }
}

// END OF SPINNER LOADER

// CIRCLE LOADER
.loader .circle > div {
  background-color: #333;
  width: 32%;
  height: 32%;
  border-radius: 100%;
  display: inline-block;
  -webkit-animation: bounceDelay 1.4s infinite ease-in-out both;
  animation: bounceDelay 1.4s infinite ease-in-out both;
}

.loader .circle .item1 {
  -webkit-animation-delay: -0.32s;
  animation-delay: -0.32s;
}

.loader .circle .item2 {
  -webkit-animation-delay: -0.16s;
  animation-delay: -0.16s;
}

@-webkit-keyframes bounceDelay {
  0%, 80%, 100% { -webkit-transform: scale(0) }
  40% { -webkit-transform: scale(1.0) }
}

@keyframes bounceDelay {
  0%, 80%, 100% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 40% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
  }
}

// END OF CIRCLER LOADER


// PULSE LOADER

.loader .pulse {
  background-color: #333;

  border-radius: 100%;
  -webkit-animation: pulse 1.0s infinite ease-in-out;
  animation: pulse 1.0s infinite ease-in-out;
}

@-webkit-keyframes pulse {
  0% { -webkit-transform: scale(0) }
  100% {
    -webkit-transform: scale(1.0);
    opacity: 0;
  }
}

@keyframes pulse {
  0% {
    -webkit-transform: scale(0);
    transform: scale(0);
  } 100% {
    -webkit-transform: scale(1.0);
    transform: scale(1.0);
    opacity: 0;
  }
}

// END OF PULSE LOADER



// SQUARE LOADER

.loader .square {
  background-color: #333;

  -webkit-animation: rotate 1.2s infinite ease-in-out;
  animation: rotate 1.2s infinite ease-in-out;
}

@-webkit-keyframes rotate {
  0% { -webkit-transform: perspective(120px) }
  50% { -webkit-transform: perspective(120px) rotateY(180deg) }
  100% { -webkit-transform: perspective(120px) rotateY(180deg)  rotateX(180deg) }
}

@keyframes rotate {
  0% {
    transform: perspective(120px) rotateX(0deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(0deg) rotateY(0deg)
  } 50% {
    transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg);
    -webkit-transform: perspective(120px) rotateX(-180.1deg) rotateY(0deg)
  } 100% {
    transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
    -webkit-transform: perspective(120px) rotateX(-180deg) rotateY(-179.9deg);
  }
}

// END OF SQUARE LOADER


// BOUNCE LOADER

.loader .bounce {
  position: relative;
}

.loader .bounce .item {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #333;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;

  -webkit-animation: bounce 2.0s infinite ease-in-out;
  animation: bounce 2.0s infinite ease-in-out;
}

.loader .bounce .item2 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

@-webkit-keyframes bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes bounce {
  0%, 100% {
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% {
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

// END OF BOUNCE LOADER


// BAR LOADR
.loader .bar > div {
  background-color: #333;
  height: 100%;
  width: 6px;
  display: inline-block;
  margin-left: 3px;

  -webkit-animation: stretchDelay 1.2s infinite ease-in-out;
  animation: stretchDelay 1.2s infinite ease-in-out;
}

.loader .bar .item2 {
  -webkit-animation-delay: -1.1s;
  animation-delay: -1.1s;
}

.loader .bar .item3 {
  -webkit-animation-delay: -1.0s;
  animation-delay: -1.0s;
}

.loader .bar .item4 {
  -webkit-animation-delay: -0.9s;
  animation-delay: -0.9s;
}

.loader .bar .item5 {
  -webkit-animation-delay: -0.8s;
  animation-delay: -0.8s;
}

@-webkit-keyframes stretchDelay {
  0%, 40%, 100% { -webkit-transform: scaleY(0.4) }
  20% { -webkit-transform: scaleY(1.0) }
}

@keyframes stretchDelay {
  0%, 40%, 100% {
    transform: scaleY(0.4);
    -webkit-transform: scaleY(0.4);
  }  20% {
    transform: scaleY(1.0);
    -webkit-transform: scaleY(1.0);
  }
}

// END OF BAR LOADER
